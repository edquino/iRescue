{{!-- Start Form --}}
<div class="row grid-margin">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center">Modificar</h4>
                <form action="/municipalities/{{municipality.municipality_id}}/update" method="POST">
                    <fieldset>
                        <div class="form-group">
                            <label for="cname">Nombre Municipio</label>
                            <input id="cname" class="form-control" name="name" value="{{municipality.name}}" minlength="2" type="text" placeholder="Escribir nombre del departamento..." required>
                        </div>
                        <div class="form-group">
                            <label>Departamento</label>
                            <select class="js-example-basic-single w-100" name="state_id">
                                <option value="{{municipality.state_id}}">{{municipality.state_name}}</option>
                                {{#each states}}
                                    <option value="{{state_id}}">{{name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Estado</label>
                            {{#showFormElements municipality.active}}
                            <select class="js-example-basic-single w-100" name="active">
                                <option value="1">Activo</option>
                                <option value="0">Inactivo</option>
                            </select>
                            {{else}}
                            <select class="js-example-basic-single w-100" name="active">
                                <option value="0">Inactivo</option>
                                <option value="1">Activo</option>
                            </select>
                            {{/showFormElements}}
                        </div>
                        <button class="btn btn-primary" type="submit">Modificar</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
{{!-- End Form --}}
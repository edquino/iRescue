<div class="row grid-margin">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center">Nuevo Administrador</h4>
                <form action="/administrators/create" method="POST">
                    <fieldset>
                        <div class="form-group">
                            <label for="cname">Nombre de Usuario</label>
                            <input id="cname" class="form-control" name="username" minlength="2" type="text" placeholder="Escribir nombre del usuario..." required>
                        </div>
                        <div class="form-group">
                            <label for="cname">Nombre</label>
                            <input id="cname" class="form-control" name="name" minlength="2" type="text" placeholder="Escribir nombre..." required>
                        </div>
                        <div class="form-group">
                            <label for="cname">Apellido</label>
                            <input id="cname" class="form-control" name="lastname" minlength="2" type="text" placeholder="Escribir apellido..." required>
                        </div>
                        <div class="form-group">
                            <label class="form-check-label">多Usar contrase単a predeterminada?</label>
                            <div class="form-check flex-row">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="passwordoption" id="showinput" onclick="showoptions();"
                                        value="1" checked required>
                                    Si
                                </label>
                            </div>
                            <div class="form-check flex-row">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="passwordoption" id="hideinput" onclick="showoptions();"
                                        value="0" required>
                                    No
                                </label>
                            </div>
                        </div>
                        <div id="content-options-link" style="display: none;">
                            <div class="form-group">
                                <label for="password">Contrase単a</label>
                                <input id="password" class="form-control" name="password" type="password" placeholder="Escribir Contrase単a...">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="cemail">Correo</label>
                            <input id="cemail" class="form-control" type="email" name="email"  placeholder="Escribir correo..." required>
                        </div>
                        <button class="btn btn-primary" type="submit">Guardar</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
{{!-- End Form --}}
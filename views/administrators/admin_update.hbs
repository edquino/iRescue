{{!-- Start Form --}}
<div class="row grid-margin">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center">Modificar Administrador</h4>
                <form action="/administrators/{{administrator.admin_id}}/update-view" method="POST">
                    <fieldset>
                        <div class="form-group">
                            <label for="cname">Nombre de Usuario</label>
                            <input id="cname" class="form-control" name="username" value="{{administrator.username}}" minlength="2" type="text" placeholder="Escribir nombre del usuario..." required>
                        </div>
                        <div class="form-group">
                            <label for="cname">Nombre</label>
                            <input id="cname" class="form-control" name="name" value="{{administrator.name}}" minlength="2" type="text" placeholder="Escribir nombre..." required>
                        </div>
                        <div class="form-group">
                            <label for="cname">Apellido</label>
                            <input id="cname" class="form-control" name="lastname" value="{{administrator.lastname}}" minlength="2" type="text" placeholder="Escribir apellido..." required>
                        </div>
                        <div class="form-group">
                            <label class="form-check-label">多Usar contrase単a predeterminada?</label>
                            <div class="form-check flex-row">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="passwordoption" id="showinput" onclick="showoptions();"
                                        value="1" checked required>
                                    Si
                                </label>
                            </div>
                            <div class="form-check flex-row">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="passwordoption" id="hideinput" onclick="showoptions();"
                                        value="0" required>
                                    No
                                </label>
                            </div>
                        </div>
                        <div id="content-options-link" style="display: none;">
                            <div class="form-group">
                                <label for="password">Contrase単a</label>
                                <input id="passwordOption" class="form-control" name="password" type="password" placeholder="Escribir Contrase単a...">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="cemail">Correo</label>
                            <input id="cemail" class="form-control" type="email" name="email" value="{{administrator.email}}"  placeholder="Escribir correo..." required>
                        </div>
                        <div class="form-group">
                            <label>Estado</label>
                            {{#showFormElements administrator.active}}
                            <select class="js-example-basic-single w-100" name="active">
                                <option value="1">Activo</option>
                                <option value="0">Inactivo</option>
                            </select>
                            {{else}}
                            <select class="js-example-basic-single w-100" name="active">
                                <option value="0">Inactivo</option>
                                <option value="1">Activo</option>
                            </select>
                            {{/showFormElements}}
                        </div>
                        <button type="submit" class="btn btn-primary">Modificar</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
{{!-- End Form --}}
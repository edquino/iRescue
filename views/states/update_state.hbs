{{!-- Start Form --}}
<div class="row grid-margin">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center">Modificar Departamento</h4>
                <form action="/state/{{state.state_id}}/update" method="POST">
                    <fieldset>
                        <div class="form-group">
                            <label for="cname">Nombre</label>
                            <input id="cname" class="form-control" name="name" value="{{state.name}}" minlength="2" type="text" required>
                        </div>
                        <div class="form-group">
                            <label>Estado</label>
                            {{#showFormElements state.active}}
                            <select class="js-example-basic-single w-100" name="active">
                                <option value="1">Activo</option>
                                <option value="0">Inactivo</option>
                            </select>
                            {{else}}
                            <select class="js-example-basic-single w-100" name="active">
                                <option value="0">Inactivo</option>
                                <option value="1">Activo</option>
                            </select>
                            {{/showFormElements}}
                        </div>
                        <button class="btn btn-primary" type="submit">Modificar</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
{{!-- End Form --}}
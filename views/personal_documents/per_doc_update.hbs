{{!-- Start Form --}}
<div class="row grid-margin">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center">Modificar Documento</h4>
                <form action="/personal-documents/{{personal_document.document_id}}/update" method="POST">
                    <fieldset>
                        <div class="form-group">
                            <label for="cname">Nombre</label>
                            <input id="cname" class="form-control" name="name" value="{{personal_document.name}}" minlength="2" type="text" placeholder="Escribir titulo del acceso..." required>
                        </div>
                        <div class="form-group">
                            <label for="ccomment">Descripci&oacute;n</label>
                            <textarea id="ccomment" class="form-control" name="description" required>{{personal_document.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <label>Estado</label>
                            {{#showFormElements personal_document.active}}
                            <select class="js-example-basic-single w-100" name="active">
                                <option value="1">Activo</option>
                                <option value="0">Inactivo</option>
                            </select>
                            {{else}}
                            <select class="js-example-basic-single w-100" name="active">
                                <option value="0">Inactivo</option>
                                <option value="1">Activo</option>
                            </select>
                            {{/showFormElements}}
                        </div>
                        <button class="btn btn-primary" type="submit">Modificar</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
{{!-- End Form --}}